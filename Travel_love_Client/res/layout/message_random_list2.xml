<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
        
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" 
            android:background="@drawable/msg_layout"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
          <LinearLayout 
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <ImageView 
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="15dp"
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:background="@drawable/p1"
                   android:id="@+id/user_head"/>
               <LinearLayout
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <TextView 
                   android:id="@+id/locattion"
                   android:layout_marginLeft="20dp"
                   android:layout_marginTop="6dp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:singleLine="true"
                   android:ellipsize="end"
                   android:textColor="#A2A2A2"
                   android:text="发表地点"/>
                   <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="5dip"
                    android:id="@+id/message_article"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:text="个人要求:妹子多就好了"
                    android:layout_marginBottom="10dp"
                   />
                 </LinearLayout>
             </LinearLayout>
             <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bbcc3333" />
             <LinearLayout 
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="20dp"
               android:orientation="horizontal">
                   <TextView
                      android:layout_marginLeft="20dp" 
                      android:layout_weight="1.0"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="15dp"
                      android:id="@+id/destination"
                      android:textColor="#000000"
                      android:singleLine="true"
                      android:ellipsize="end"
                      android:text="目的地:"/>
             </LinearLayout>
               <LinearLayout 
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                      <TextView 
                      android:layout_weight="1.0"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="15dp"
                      android:id="@+id/starting"
                      android:textColor="#000000"
                      android:singleLine="true"
                      android:ellipsize="end"
                      android:layout_marginLeft="70dp"
                      android:text="出发地:"/>
               </LinearLayout>
                 <LinearLayout 
                   android:layout_width="fill_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                     <TextView 
                      android:layout_weight="1.0"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="15dp"
                      android:id="@+id/duringdays"
                      android:textColor="#000000"
                      android:singleLine="true"
                      android:layout_marginLeft="120dp"
                      android:layout_marginBottom="5dp"
                      android:ellipsize="end"
                      android:text="天数:"/>
               </LinearLayout>
          <LinearLayout 
               android:layout_width="fill_parent"
               android:orientation="horizontal"
               android:layout_height="wrap_content">
           <!-- 以下隐藏的信息 -->
           <TextView 
               android:id="@+id/user_id_msg"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="13"
                android:visibility="gone"/>
           <TextView 
               android:id="@+id/startdays_msg"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="13"
               android:visibility="gone"/>
             <TextView 
               android:id="@+id/enddays_msg"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="13"
               android:visibility="gone"/>
               <TextView 
               android:id="@+id/msg_id"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="13"
               android:visibility="gone"/>
         </LinearLayout>
      </LinearLayout>
</LinearLayout>
