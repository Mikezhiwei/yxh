<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
      <item 
          android:state_pressed="false"
          >
          <shape 
              android:shape="rectangle">
              <corners
                  android:radius="10dp">
              </corners>
              <gradient 
                  android:startColor="#61B12C"
                  android:endColor="#61B12C"
                  android:angle="90"/>
          </shape> 
      </item>
      <item 
          android:state_pressed="true"
        >
          <shape 
             android:shape="rectangle">
             <corners android:radius="10dp"/>
              <gradient android:startColor="#b061B12C"
                  android:endColor="#b061B12C"
                  android:angle="90"/>    
          </shape>  
      </item>
</selector>