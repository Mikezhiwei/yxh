<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" 
                android:endColor="#b04E9ED3" 
                android:startColor="#b04E9ED3" /><!-- 颜色前面加入b0代码表示按下 -->
          			
            <corners android:bottomLeftRadius="4dip" 
                android:bottomRightRadius="4dip" 
                android:topLeftRadius="4dip" 
                android:topRightRadius="4dip" />
        </shape></item> 

    
        
    <item><shape android:shape="rectangle">
           <gradient 
               android:startColor="#4E9ED3"
               android:endColor="#4E9ED3"/> 
                   
            <corners android:bottomLeftRadius="4dip" 
                android:bottomRightRadius="4dip" 
                android:topLeftRadius="4dip" 
                android:topRightRadius="4dip" />
        </shape></item>

</selector>